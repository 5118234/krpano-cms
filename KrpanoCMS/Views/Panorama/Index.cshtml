@model IEnumerable<Panorama>

@{
    ViewBag.Title = "My panoramas";
}

<h2>My panoramas</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-lg btn-info" })
</p>
<table class="table table-striped">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.AddedOn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    var fullUrl = "/Documents/Panoramas/" + item.Id + ".jpg";
                }
                <img src="@fullUrl" width="200px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AddedOn)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
                    }

</table>
